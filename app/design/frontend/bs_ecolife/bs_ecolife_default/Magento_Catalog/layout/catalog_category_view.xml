<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">   
			<container name="category.view.container.custom.move.content" htmlTag="div" htmlClass="category-view-custom-move-content" before="-" />
        </referenceContainer>
		<referenceContainer name="page.wrapper">  
			<container name="category.view.breadcrumbs.banner" htmlTag="div" htmlClass="category-view-breadcrumbs-banner" after="header.container" />
		</referenceContainer>
		<referenceContainer name="sidebar.additional">
            <block class="Magento\Cms\Block\Block" name="banner.sidebar.left">
				<arguments>
					<argument name="block_id" xsi:type="string">banner-category-left</argument>
				</arguments>
			</block>
        </referenceContainer>
		<move element="category.view.container" destination="category.view.container.custom.move.content"/>
		<move element="page.main.title" destination="category.view.breadcrumbs.banner" before="-" />
		<move element="category.image" destination="category.view.breadcrumbs.banner"/>
		<move element="breadcrumbs" destination="category.view.breadcrumbs.banner"/>
    </body>
</page>
